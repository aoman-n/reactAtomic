{
  "extends": [
    "airbnb",
    "prettier"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prefer-stateless-function": 1,
    "react/prop-types": 0,
    "no-shadow": 0,
    "no-alert": 0,
    "import/no-extraneous-dependencies": 0,
    "global-require": 0,
    "import/no-dynamic-require": 0
  },
  "settings": {
    "import/resolver": {
      "babel-module": {
        "root": ["./src/"],
        "alias": {
          "components": "./src/components",
          "images": "./src/images",
          "styles": "./src/styles"
        }
      }
    }
  }
}