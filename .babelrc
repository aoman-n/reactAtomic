{
  "presets": [
    [ "@babel/preset-env", { "modules": false } ],
    "@babel/preset-react",
  ],
  "plugins": [
    ["module-resolver", {
      "root": ["./src/"],
      "alias": {
        "components": "./src/components",
        "images": "./src/images",
        "styles": "./src/styles",
      }
    }],
    "react-hot-loader/babel",
  ]
}